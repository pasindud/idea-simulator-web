#config.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='', aria-hidden='true')
    .modal-header
        h3#myModalLabel Configure the Simulator
      .modal-body
          #appalt

       form.form-horizontal
       .control-group
        label.control-label App id
        .controls
          input#inputappid(type='text',placeholder='App id',disabled="",value='#{appid}')
       .control-group
        label.control-label App Password
        .controls
          input#inputapppassword(type='text', disabled="", placeholder='App Password',value='#{appw}')
       .control-group
        label.control-label App URL
        .controls
          input#inputappurl(type='text', placeholder='App URL',value='http://localhost/dialog/listener.php')
      .modal-footer
        button.btn(data-dismiss='modal', aria-hidden='true') Close
        a.btn.btn-primary(href='#' , id='saveapp') Save changes

